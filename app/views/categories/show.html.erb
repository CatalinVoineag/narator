<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div>

<% @contents.each do |content| %> 
  <h1><%= link_to content.title, edit_content_path(content) %></h1>
  <%= button_to 'Delete', content_path(content), method: :delete %>
  <br>

  <% if content.audio.present? %> 
    <%= audio_tag(content.audio, controls: true) %>
  <% end %> 
<% end %> 

